<div class="container">
  <div class="row" id="cards">

    <% data.cities.each do |key, value| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= value.image_url %>');">
          <div class="card-category">Popular</div>
          <div class="card-description">
            <h2><%= value.title %></h2>
            <p><%= value.subtitle%></p>
          </div>
          <%= image_tag value.avatar, class: 'card-user' %>
          <a class="card-link" href="#" ></a>
        </div>
      </div>
    <% end %>
  </div>
</div>
